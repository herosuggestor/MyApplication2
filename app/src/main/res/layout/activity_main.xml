<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.haddad.george.myapplication.MainActivity"
    android:background="@drawable/dota2">

    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hero1"
        android:id="@+id/hero1"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColorHint="@android:color/holo_orange_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hero3"
        android:id="@+id/hero3"
        android:layout_alignBaseline="@+id/hero4"
        android:layout_alignBottom="@+id/hero4"
        android:layout_alignParentStart="true"
        android:textColorHint="@android:color/holo_orange_light" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/hero5"
        android:layout_alignParentStart="true"
        android:textColorHint="@android:color/holo_orange_dark"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:drawable/arrow_down_float"
        android:backgroundTint="@android:drawable/arrow_down_float"
        tools:text="find suggestions"
        android:textColor="@android:color/holo_orange_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hero2"
        android:id="@+id/hero2"
        android:paddingTop="30dp"
        android:layout_alignBaseline="@+id/hero1"
        android:layout_alignBottom="@+id/hero1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="57dp"
        android:textColorHint="@android:color/holo_orange_light"
        tools:ignore="RelativeOverlap" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hero4"
        android:id="@+id/hero4"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/hero2"
        android:layout_alignStart="@+id/hero2"
        android:textColorHint="@android:color/holo_orange_light"
/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hero5"
        android:id="@+id/hero5"
        android:layout_marginTop="18dp"
        android:textColorHint="@android:color/holo_orange_light"
        android:layout_below="@+id/hero4"
        android:layout_centerHorizontal="true"
/>
</RelativeLayout>
